{
  "family": "indexing-model-server",
  "networkMode": "awsvpc",
  "cpu": "512",
  "memory": "4096",
  "requiresCompatibilities": ["FARGATE"],
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "indexing_model_server",
      "image": "danswer/danswer-model-server:${IMAGE_TAG}",
      "command": [
        "/bin/sh",
        "-c",
        "if [ \"$DISABLE_MODEL_SERVER\" = \"True\" ]; then echo 'Skipping service...'; exit 0; else exec uvicorn model_server.main:app --host 0.0.0.0 --port 9001; fi"
      ],
      "essential": true,
      "environment": [
        {"name": "INDEXING_ONLY", "value": "True"}
      ],
      "secrets": [
        {
          "name": "IMAGE_TAG",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:IMAGE_TAG"
        },
        {
          "name": "LOG_LEVEL",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:LOG_LEVEL"
        },
        {
          "name": "MIN_THREADS_ML_MODELS",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:MIN_THREADS_ML_MODELS"
        },
        {
          "name": "DISABLE_MODEL_SERVER",
          "valueFrom": "arn:aws:secretsmanager:REGION:ACCOUNT_ID:secret:DISABLE_MODEL_SERVER"
        }
      ],
      "portMappings": [
        {
          "containerPort": 9001,
          "protocol": "tcp"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/indexing-model-server",
          "awslogs-region": "REGION",
          "awslogs-stream-prefix": "indexing"
        }
      }
    }
  ]
}
