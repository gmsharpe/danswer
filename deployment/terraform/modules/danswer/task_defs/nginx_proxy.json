{
  "family": "danswer_nginx",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "256",
  "containerDefinitions": [
    {
      "name": "nginx",
      "image": "nginx:1.23.4-alpine",
      "cpu": 512,
      "memory": 256,
      "portMappings": [
        {
          "containerPort": 80,
          "hostPort": 80,
          "protocol": "tcp"
        },
        {
          "containerPort": 3000,
          "hostPort": 3000,
          "protocol": "tcp"
        }
      ],
      "command": [
        "/bin/sh",
        "-c",
        "while [ ! -f /etc/nginx/conf.d/run-nginx.sh ]; do sleep 1; done; dos2unix /etc/nginx/conf.d/run-nginx.sh && /etc/nginx/conf.d/run-nginx.sh app.conf.template.dev"
      ],
      "environment": [
        {
          "name": "NGINX_PORT",
          "value": "80"
        }
      ],
      "secrets": [
        {
          "name": "DOMAIN",
          "valueFrom": "arn:aws:secretsmanager:${aws_region}:${aws_acct_id}:secret:DOMAIN>"
        },
        {
          "name": "SSL_CERT_FILE_NAME",
          "valueFrom": "arn:aws:secretsmanager:${aws_region}:${aws_acct_id}:secret:SSL_CERT_FILE_NAME>"
        },
        {
          "name": "SSL_CERT_KEY_FILE_NAME",
          "valueFrom": "arn:aws:secretsmanager:${aws_region}:${aws_acct_id}:secret:SSL_CERT_KEY_FILE_NAME>"
        }
      ],
      "mountPoints": [
        {
          "sourceVolume": "nginx_conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": false
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/danswer_nginx",
          "awslogs-region": "${aws_region}",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ],
  "volumes": [
    {
      "name": "nginx_conf",
      "host": {
        "sourcePath": "/path/on/host/nginx/conf.d"
      }
    }
  ]
}
